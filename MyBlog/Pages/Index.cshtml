@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container container-md-down-fluid">
    @if (Model.Posts.Count > 0)
    {
        @Html.Partial("Shared/_MainPostItemDisplay", Model.Posts.First())
    }

    <div class="row">
        
        <div class="col-12 col-md-9 offset-md-1">
            @foreach (var post in Model.Posts.Skip(1))
            {
                @Html.Partial("Shared/_PostItemDisplay", post)
            }

            @Html.Partial("Shared/_Pagination", Model.Posts)
        </div>

    </div>


</div>
